{
  "compilerOptions": {
    "target": "ES2020",           // The target ECMAScript version
    "module": "commonjs",         // The module system to use (CommonJS for Node.js)
    "strict": true,               // Enable all strict type-checking options
    "esModuleInterop": true,      // Enables emit interoperability between CommonJS and ES Modules
    "skipLibCheck": true,         // Skip type checking of all declaration files (*.d.ts)
    "outDir": "./dist"            // Output directory for compiled files
  },
  "include": [
    "src/**/*.ts",                // Include all TypeScript files in src directory and subdirectories
    "tests/**/*.ts",              // Include all TypeScript files in tests directory and subdirectories
    "src/types/**/*.d.ts",        // Include all declaration files in src/types directory and subdirectories
    "syncDatabase.ts"             // Include the specific syncDatabase.ts file in the root or specified directory
  ],
  "exclude": [
    "node_modules"                // Exclude node_modules directory
  ]
}
